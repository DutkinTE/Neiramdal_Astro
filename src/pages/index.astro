---
import MainHeader from "../components/main-header.astro";
import MainContent from "../components/main-content.astro";
import WhoContent from "../components/who-content.astro";
import WhoEnd from "../components/who-end.astro";
import SkillsContent from "../components/skills-content.astro";
import Footer from "../components/footer.astro";
import "../styles/global.css";
---

<html lang="ru">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="assets/images/white_logo.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Play:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <title>Neiramdal</title> 
  </head>
  <body onload="window.scrollTo(0, 0);">
    <main id="main">
      <MainHeader />
      <div class="container">
        <video autoplay muted loop class="main-animation" id="background-video" height="700px">
          <source src="assets/videos/intro.mp4" type="video/mp4" />
        </video>
        <MainContent />
      </div>
    </main>
    <canvas id="who-canvas"></canvas>
    <div id="who">
      <div class="container" id="who-content">
        <WhoContent />
      </div>
      <div id="who-end">
        <WhoEnd />
      </div>
      <div id="skills">
        <SkillsContent />
      </div>
      <Footer />
    </div>

    <script>
      import "../scripts/main.js";
      import "../scripts/cursor.js";
      import "../scripts/canvas.js";
      import "../scripts/scroll.js";
    </script>
  </body>
</html>

<style>
  #skills {
    max-width: 1440px;
    border-top-left-radius: 20px;
    border-top-right-radius: 20px;
    justify-items: center;
    width: 100%;
    padding-right: 70px;
    padding-left: 70px;
    padding-top: 70px;
    padding-bottom: 70px;
    position: sticky;
    z-index: 5;
    background-color: #020202;
    color: #5b5b5b;
    transition: color 0.5s ease;
  }

  #who-content {
    margin-bottom: 30px;
    height: 300px;
  }

  #who-end {
    width: 100%;
    height: 750px;
    position: sticky;
    z-index: 2;
    top: 0;
  }

  #who-canvas {
    height: 140px;
    width: 100%;
    max-width: 1580px;
    pointer-events: none;
    position: relative;
    display: block;
    z-index: 999;
  }

  #background-video {
    position: absolute;
    bottom: -200px;
    right: 0px;
    object-fit: cover;
    z-index: -1;
  }

  #who {
    max-width: 1440px;
    width: calc(100% - 140px);
    font-weight: 100;
    color: #f5f5f5;
    padding-top: 70px;
    background-color: #070707;
    position: relative;
    z-index: 2;
    justify-items: center;
    padding-right: 70px;
    padding-left: 70px;
  }

  #main {
    width: calc(100% - 140px);
    height: 750px;
    min-height: 630px;
    top: 0;
    position: sticky;
    justify-items: center;
    padding-left: 70px;
    padding-right: 70px;
    padding-top: 50px;
    z-index: 1;
    overflow: hidden;
  }
</style>
