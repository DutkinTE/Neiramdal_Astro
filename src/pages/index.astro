---
import MainHeader from "../components/main-header.astro";
import MainContent from "../components/main-content.astro";
import WhoContent from "../components/who-content.astro";
import WhoEnd from "../components/who-end.astro";
import "../styles/global.css";
---

<html lang="ru">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="assets/images/white_logo.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Neiramdal</title>
  </head>
  <body>
    <main id="main">
      <MainHeader />
      <div class="container">
        <video autoplay muted loop id="background-video" height="700px">
          <source src="assets/videos/intro.mp4" type="video/mp4" />
        </video>
        <MainContent />
      </div>
    </main>
    <canvas id="who-canvas"></canvas>
    <div id="who">
      <div class="container">
        <WhoContent />
        <div id="who-end">
          <WhoEnd />
        </div>
      </div>
    </div>
    <div id="skills"></div>

    <script>
      import "../scripts/main.js";
    </script>
  </body>
</html>

<style>
  #skills {
    position: relative;
    z-index: 5;
    height: 1000px;
    background-color: #070707;
  }

  #who-end {
    position: sticky;
    z-index: 2;
    top: 0;
  }

  #who-canvas {
    height: 140px;
    width: 100%;
    pointer-events: none;
    position: relative;
    display: block;
    z-index: 999;
  }

  #background-video {
    position: absolute;
    bottom: -250px;
    right: 0px;
    object-fit: cover;
    z-index: -1;
  }

  #who {
    font-weight: 100;
    color: #f5f5f5;
    padding-top: 70px;
    background-color: #070707;
    position: relative;
    height: 1100px;
    z-index: 2;
    justify-items: center;
    padding-right: 70px;
    padding-left: 70px;
  }

  #main {
    height: 800px;
    top: 0;
    position: sticky;
    justify-items: center;
    padding-left: 70px;
    padding-right: 70px;
    padding-top: 5vh;
    z-index: 1;
    overflow: hidden;
  }
</style>
