---
import MainHeader from "../components/main-header.astro";
import MainContent from "../components/main-content.astro";
import WhoContent from "../components/who-content.astro";
import WhoEnd from "../components/who-end.astro";
import "../styles/global.css";
---

<html lang="ru">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="assets/images/white_logo.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Play:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <title>Neiramdal</title>
  </head>
  <body>
    <main id="main">
      <MainHeader />
      <div class="container">
        <video autoplay muted loop id="background-video" height="700px">
          <source src="assets/videos/intro.mp4" type="video/mp4" />
        </video>
        <MainContent />
      </div>
    </main>
    <canvas id="who-canvas"></canvas>
    <div id="who">
      <div class="container">
        <WhoContent />
      </div>
      <div id="who-end">
          <WhoEnd />
      </div>
      <div id="skills">
        <div class="container">
          <div class="skills-title">Что мы умеем?</div>
          <div class="skills-parts">
            <div class="skills-part">Мобильная разработка</div>
            <div class="skills-part">Разработка десктопных приложений</div>
            <div class="skills-part">Веб-разработка</div>
          </div>
        </div>
      </div>
    </div>

    <script>
      import "../scripts/main.js";
    </script>
  </body>
</html>

<style>
  .skills-parts {
    font-size: 24px;
    border-top: #f5f5f5 1px solid;
  }

  .skills-part {
    padding-left: 60px;
    padding-top: 65px;
    padding-bottom: 65px;
    border-bottom: #f5f5f5 1px solid;
  }

  .skills-title {
    font-size: 36px;
    margin-bottom: 80px;
  }

  #skills {
    max-width: 1440px;
    border-radius: 20px;
    justify-items: center;
    width: 100%;
    padding-right: 70px;
    padding-left: 70px;
    padding-top: 70px;
    position: relative;
    z-index: 5;
    height: 900px;
    background-color: #020202;
    color: #f5f5f5;
  }

  #who-end {
    width: 100%;
    position: sticky;
    z-index: 2;
    top: 0;
  }

  #who-canvas {
    height: 140px;
    width: 100%;
    max-width: 1580px;
    pointer-events: none;
    position: relative;
    display: block;
    z-index: 999;
  }

  #background-video {
    position: absolute;
    bottom: -250px;
    right: 0px;
    object-fit: cover;
    z-index: -1;
  }

  #who {
    max-width: 1440px;
    width: calc(100% - 140px);
    font-weight: 100;
    color: #f5f5f5;
    padding-top: 70px;
    background-color: #070707;
    position: relative;
    height: 2000px;
    z-index: 2;
    justify-items: center;
    padding-right: 70px;
    padding-left: 70px;
  }

  #main {
    width: calc(100% - 140px);
    height: 800px;
    top: 0;
    position: sticky;
    justify-items: center;
    padding-left: 70px;
    padding-right: 70px;
    padding-top: 5vh;
    z-index: 1;
    overflow: hidden;
  }
</style>
